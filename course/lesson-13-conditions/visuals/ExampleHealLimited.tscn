var health := 0
var health_gained := 25

onready var health_bar := $HealthBar/HealthBarCurrent
onready var label := $HealthBar/Label


func _ready():
	reset()

func run():
	health += 25
	
	if health > 100:
		health = 100
	
	health_bar.rect_size.x = health * 2
	label.text = \"health = %s\" % [health_bar.rect_size.x/2]
	
	if health == 100:
		health_bar.rect_size.x = 190

func reset():
	health = 0
	health_bar.rect_size.x = health
	label.text = \"health = %s\" % [health]
"

